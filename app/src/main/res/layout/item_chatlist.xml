<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/item_chat_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView
      android:id="@+id/item_chat_title_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_launcher"/>
  <LinearLayout
      android:id="@+id/item_chat_lll"
      android:layout_marginTop="8dp"
      android:layout_alignParentRight="true"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_chat_aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string"/>
    <TextView
        android:text="string"
        android:id="@+id/item_chat_bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_toLeftOf="@+id/item_chat_lll"
      android:layout_marginTop="8dp"
      android:layout_toRightOf="@id/item_chat_title_img"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_chat_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/item_chat_title_string"
          android:textColor="#fc5d99"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="string"/>
      <TextView
          android:text="string"
          android:id="@+id/item_chat_title_str"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>